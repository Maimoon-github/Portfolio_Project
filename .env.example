# Environment variables for React application
# Copy this file to .env.local and configure with your actual values

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# Authentication Configuration
VITE_JWT_ACCESS_TOKEN_LIFETIME=3600
VITE_JWT_REFRESH_TOKEN_LIFETIME=86400

# Real-time Sync Configuration
VITE_SYNC_POLL_INTERVAL=5000
VITE_HEALTH_CHECK_INTERVAL=30000

# Development Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_REAL_TIME_SYNC=true
VITE_ENABLE_EVENT_LOGGING=true
VITE_ENABLE_OPTIMISTIC_UPDATES=true
